{
  "extends": "@cryptohub/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@ui/*": ["../../packages/ui/src/*"],
      "@ui/components": ["../../packages/ui/src/index.tsx"],
    },
    "plugins": [
      {
        "name": "next",
      },
    ],
    "noPropertyAccessFromIndexSignature": false,
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
  ],
  "exclude": ["node_modules"],
}
